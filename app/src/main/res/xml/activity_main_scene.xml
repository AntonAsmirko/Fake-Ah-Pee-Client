<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/post_holder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="30dp"
            android:visibility="gone" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@id/post_holder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="0dp"
            android:alpha="1"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="1">
            <CustomAttribute
                app:attributeName="cardBackgroundColor"
                app:customColorValue="@color/secondaryLightColor" />
        </Constraint>
        <Constraint
            android:id="@+id/archive_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:alpha="0"
            android:elevation="5dp"
            android:rotation="0"
            android:scaleX="0"
            android:scaleY="0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/post_holder" />

        <Constraint
            android:id="@+id/delete_button"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="20dp"
            android:alpha="0.5"
            android:elevation="5dp"
            android:rotation="0"
            android:scaleX="0.5"
            android:scaleY="0.5"
            app:layout_constraintBottom_toBottomOf="@id/post_holder"
            app:layout_constraintStart_toEndOf="@id/post_holder"
            app:layout_constraintTop_toTopOf="@id/post_holder" />

        <Constraint
            android:id="@+id/like_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:alpha="0"
            android:elevation="5dp"
            android:padding="5dp"
            android:rotation="0"
            android:scaleX="0"
            android:scaleY="0"
            app:layout_constraintStart_toEndOf="@id/post_holder"
            app:layout_constraintTop_toTopOf="parent" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/top_card_expanded">
        <Constraint
            android:id="@id/post_holder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:layout_marginEnd="0dp"
            android:alpha="1"
            android:scaleX="1"
            android:scaleY="1"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="1"
            app:layout_constraintHeight_percent="1.2">
            <CustomAttribute
                app:attributeName="cardBackgroundColor"
                app:customColorValue="@color/secondaryLightColor" />
        </Constraint>
    </ConstraintSet>

    <Transition
        app:constraintSetStart="@+id/start"
        app:constraintSetEnd="@+id/end" />
    <Transition
        app:constraintSetStart="@+id/end"
        app:constraintSetEnd="@+id/top_card_expanded" >
        <OnSwipe
            app:touchAnchorId="@+id/post_holder"
            app:dragDirection="dragUp"
            app:touchAnchorSide="middle" />
    </Transition>

</MotionScene>

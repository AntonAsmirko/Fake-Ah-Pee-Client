<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start"></ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@id/post_holder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="0dp"
            android:alpha="1"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="1">
            <CustomAttribute
                app:attributeName="cardBackgroundColor"
                app:customColorValue="@color/secondaryLightColor" />
        </Constraint>
        <Constraint
            android:id="@+id/archive_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:alpha="0"
            android:elevation="5dp"
            android:rotation="0"
            android:scaleX="0"
            android:scaleY="0"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/post_holder"
            app:layout_constraintStart_toEndOf="@id/post_holder" />

        <Constraint
            android:id="@+id/delete_button"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="20dp"
            android:alpha="0.5"
            android:elevation="5dp"
            android:rotation="0"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/post_holder"
            app:layout_constraintStart_toEndOf="@id/post_holder"
            app:layout_constraintTop_toTopOf="@id/post_holder" />

        <Constraint
            android:id="@+id/like_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:alpha="0"
            android:elevation="5dp"
            android:padding="5dp"
            android:rotation="0"
            android:scaleX="0"
            android:scaleY="0"
            android:visibility="gone"
            app:layout_constraintStart_toEndOf="@id/post_holder"
            app:layout_constraintTop_toTopOf="@id/post_holder" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/top_card_expanded">
        <Constraint
            android:id="@id/post_holder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:layout_marginEnd="0dp"
            android:alpha="1"
            android:scaleX="1"
            android:scaleY="1"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="1.2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="1">
            <CustomAttribute
                app:attributeName="cardBackgroundColor"
                app:customColorValue="@color/secondaryLightColor" />
        </Constraint>
    </ConstraintSet>

    <Transition
        app:constraintSetEnd="@+id/end"
        app:constraintSetStart="@+id/start">
        <OnSwipe
            app:dragDirection="dragLeft"
            app:touchAnchorId="@+id/post_holder"
            app:touchAnchorSide="right" />
    </Transition>
    <Transition
        app:constraintSetEnd="@+id/top_card_expanded"
        app:constraintSetStart="@+id/end" />
    <ConstraintSet android:id="@+id/right_card_visible">
        <Constraint
            android:id="@id/post_holder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="100dp"
            android:alpha="1"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="1">
            <CustomAttribute
                app:attributeName="cardBackgroundColor"
                app:customColorValue="@color/secondaryLightColor" />
        </Constraint>

        <Constraint
            android:id="@+id/delete_button"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="20dp"
            android:alpha="1"
            android:elevation="5dp"
            android:rotation="360"
            android:scaleX="1"
            android:scaleY="1"
            app:layout_constraintBottom_toBottomOf="@id/post_holder"
            app:layout_constraintStart_toEndOf="@id/post_holder"
            app:layout_constraintTop_toTopOf="@id/post_holder" />

        <Constraint
            android:id="@+id/archive_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="25dp"
            android:alpha="1"
            android:elevation="5dp"
            android:rotation="0"
            android:scaleX="1"
            android:scaleY="1"
            app:layout_constraintBottom_toBottomOf="@id/post_holder"
            app:layout_constraintStart_toEndOf="@id/post_holder" />

        <Constraint
            android:id="@+id/like_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="25dp"
            android:alpha="1"
            android:elevation="5dp"
            android:padding="5dp"
            android:rotation="0"
            android:scaleX="1"
            android:scaleY="1"
            app:layout_constraintStart_toEndOf="@id/post_holder"
            app:layout_constraintTop_toTopOf="@id/post_holder" />

    </ConstraintSet>
    <Transition
        app:constraintSetEnd="@+id/right_card_visible"
        app:constraintSetStart="@+id/end">
        <OnSwipe
            app:dragDirection="dragLeft"
            app:touchAnchorId="@+id/post_holder"
            app:touchAnchorSide="right" />
    </Transition>

    <ConstraintSet android:id="@+id/right_card_off_screen">
        <Constraint
            android:id="@+id/post_holder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="200dp"
            android:alpha="0.1"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:translationZ="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="1">
            <CustomAttribute
                app:attributeName="cardBackgroundColor"
                app:customColorValue="@color/secondaryColor" />
        </Constraint>
        <Constraint
            android:id="@+id/delete_button"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:elevation="5dp"
            android:rotation="360"
            android:scaleX="1.5"
            android:scaleY="1.5"
            app:layout_constraintBottom_toBottomOf="@id/post_holder"
            app:layout_constraintStart_toEndOf="@id/post_holder"
            app:layout_constraintTop_toTopOf="@id/post_holder" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/archive_button_visible">
        <Constraint
            android:id="@+id/post_holder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="100dp"
            android:alpha="0.3"
            android:scaleX="0.5"
            android:scaleY="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="1">
            <CustomAttribute
                app:attributeName="cardBackgroundColor"
                app:customColorValue="@color/secondaryLightColor" />
        </Constraint>
        <Constraint
            android:id="@+id/delete_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="25dp"
            android:alpha="1"
            android:elevation="5dp"
            android:rotation="0"
            android:scaleX="1"
            android:scaleY="1"
            app:layout_constraintStart_toEndOf="@id/post_holder"
            app:layout_constraintTop_toTopOf="@id/post_holder" />

        <Constraint
            android:id="@+id/archive_button"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="20dp"
            android:alpha="1"
            android:elevation="5dp"
            android:rotation="0"
            android:scaleX="1"
            android:scaleY="1"
            app:layout_constraintBottom_toBottomOf="@id/post_holder"
            app:layout_constraintStart_toEndOf="@id/post_holder"
            app:layout_constraintTop_toTopOf="@id/post_holder" />

        <Constraint
            android:id="@+id/like_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="25dp"
            android:alpha="1"
            android:elevation="5dp"
            android:padding="5dp"
            android:rotation="0"
            android:scaleX="1"
            android:scaleY="1"
            app:layout_constraintBottom_toBottomOf="@id/post_holder"
            app:layout_constraintStart_toEndOf="@id/post_holder" />
    </ConstraintSet>
    <Transition
        app:constraintSetEnd="@+id/archive_button_visible"
        app:constraintSetStart="@+id/right_card_visible">
        <OnClick
            app:clickAction="transitionToEnd"
            app:targetId="@+id/archive_button" />
        <KeyFrameSet>
            <KeyPosition
                app:framePosition="50"
                app:keyPositionType="pathRelative"
                app:motionTarget="@+id/like_button"
                app:percentX="0.5"
                app:percentY="0.5"
                app:transitionEasing="accelerate" />
            <KeyAttribute
                android:scaleX="0.5"
                android:scaleY="0.5"
                app:framePosition="50"
                app:motionTarget="@+id/like_button" />
        </KeyFrameSet>
    </Transition>
    <Transition
        app:constraintSetEnd="@+id/right_card_visible"
        app:constraintSetStart="@+id/archive_button_visible">
        <OnClick app:targetId="@+id/delete_button" />
        <KeyFrameSet>
            <KeyPosition
                app:framePosition="50"
                app:keyPositionType="pathRelative"
                app:motionTarget="@+id/like_button"
                app:percentX="0.5"
                app:percentY="0.5"
                app:transitionEasing="accelerate" />
            <KeyAttribute
                android:scaleX="0.5"
                android:scaleY="0.5"
                app:framePosition="50"
                app:motionTarget="@+id/like_button" />
        </KeyFrameSet>
    </Transition>
    <Transition
        app:constraintSetEnd="@+id/right_card_off_screen"
        app:constraintSetStart="@+id/right_card_visible">
        <OnClick
            app:clickAction="transitionToEnd"
            app:targetId="@+id/delete_button" />
        <OnSwipe
            app:dragDirection="dragLeft"
            app:touchAnchorId="@+id/post_holder"
            app:touchAnchorSide="right" />
    </Transition>
    <ConstraintSet android:id="@+id/like_button_main_trash_down">
        <Constraint
            android:id="@+id/post_holder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="100dp"
            android:alpha="0.3"
            android:scaleX="0.5"
            android:scaleY="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="1">
            <CustomAttribute
                app:attributeName="cardBackgroundColor"
                app:customColorValue="#A8FF00FB" />
        </Constraint>
        <Constraint
            android:id="@+id/like_button"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="20dp"
            android:alpha="1"
            android:elevation="5dp"
            android:rotation="360"
            android:scaleX="1"
            android:scaleY="1"
            app:layout_constraintBottom_toBottomOf="@id/post_holder"
            app:layout_constraintStart_toEndOf="@id/post_holder"
            app:layout_constraintTop_toTopOf="@id/post_holder" />

        <Constraint
            android:id="@+id/delete_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="25dp"
            android:alpha="1"
            android:elevation="5dp"
            android:rotation="0"
            android:scaleX="1"
            android:scaleY="1"
            app:layout_constraintBottom_toBottomOf="@id/post_holder"
            app:layout_constraintStart_toEndOf="@id/post_holder" />

        <Constraint
            android:id="@+id/archive_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="25dp"
            android:alpha="1"
            android:elevation="5dp"
            android:padding="5dp"
            android:rotation="0"
            android:scaleX="1"
            android:scaleY="1"
            app:layout_constraintStart_toEndOf="@id/post_holder"
            app:layout_constraintTop_toTopOf="@id/post_holder" />
    </ConstraintSet>
    <Transition
        app:constraintSetEnd="@+id/like_button_main_trash_down"
        app:constraintSetStart="@+id/right_card_visible">
        <OnClick app:targetId="@+id/like_button" />
        <KeyFrameSet>
            <KeyPosition
                app:framePosition="50"
                app:keyPositionType="pathRelative"
                app:motionTarget="@+id/archive_button"
                app:percentX="0.5"
                app:percentY="0.5"
                app:transitionEasing="accelerate" />
            <KeyAttribute
                android:scaleX="0.5"
                android:scaleY="0.5"
                app:framePosition="50"
                app:motionTarget="@+id/archive_button" />
        </KeyFrameSet>
    </Transition>
    <Transition
        app:constraintSetEnd="@+id/right_card_visible"
        app:constraintSetStart="@+id/like_button_main_trash_down">
        <OnClick app:targetId="@+id/delete_button" />
        <KeyFrameSet>
            <KeyPosition
                app:framePosition="50"
                app:keyPositionType="pathRelative"
                app:motionTarget="@+id/archive_button"
                app:percentX="0.5"
                app:percentY="0.5"
                app:transitionEasing="accelerate" />
            <KeyAttribute
                android:scaleX="0.5"
                android:scaleY="0.5"
                app:framePosition="50"
                app:motionTarget="@+id/archive_button" />
        </KeyFrameSet>
    </Transition>
    <Transition
        app:constraintSetEnd="@+id/archive_button_visible"
        app:constraintSetStart="@+id/like_button_main_trash_down">
        <OnClick app:targetId="@+id/archive_button" />
        <KeyFrameSet>
            <KeyPosition
                app:framePosition="50"
                app:keyPositionType="pathRelative"
                app:motionTarget="@+id/delete_button"
                app:percentX="0.5"
                app:percentY="0.5"
                app:transitionEasing="accelerate" />
            <KeyAttribute
                android:scaleX="0.5"
                android:scaleY="0.5"
                app:framePosition="50"
                app:motionTarget="@+id/delete_button" />
        </KeyFrameSet>
    </Transition>
    <Transition
        app:constraintSetEnd="@+id/like_button_main_trash_down"
        app:constraintSetStart="@+id/archive_button_visible">
        <OnClick app:targetId="@+id/like_button" />
    </Transition>
    <Transition
        app:constraintSetEnd="@+id/end"
        app:constraintSetStart="@+id/like_button_main_trash_down">
        <OnSwipe
            app:dragDirection="dragRight"
            app:touchAnchorId="@+id/post_holder"
            app:touchAnchorSide="right" />
    </Transition>
    <Transition
        app:constraintSetEnd="@+id/end"
        app:constraintSetStart="@+id/archive_button_visible">
        <OnSwipe
            app:dragDirection="dragRight"
            app:touchAnchorId="@+id/post_holder"
            app:touchAnchorSide="right" />
    </Transition>
    <ConstraintSet android:id="@+id/like_off_screne">
        <Constraint
            android:id="@+id/post_holder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="200dp"
            android:alpha="0.1"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:translationZ="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="1">
            <CustomAttribute
                app:attributeName="cardBackgroundColor"
                app:customColorValue="#A8FF00FB" />
        </Constraint>
        <Constraint
            android:id="@+id/like_button"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:elevation="5dp"
            android:rotation="360"
            android:scaleX="1.5"
            android:scaleY="1.5"
            app:layout_constraintBottom_toBottomOf="@id/post_holder"
            app:layout_constraintStart_toEndOf="@id/post_holder"
            app:layout_constraintTop_toTopOf="@id/post_holder" />
    </ConstraintSet>
    <Transition
        app:constraintSetEnd="@+id/like_off_screne"
        app:constraintSetStart="@+id/like_button_main_trash_down">
        <OnSwipe
            app:dragDirection="dragLeft"
            app:touchAnchorId="@+id/post_holder"
            app:touchAnchorSide="right" />
    </Transition>
    <ConstraintSet android:id="@+id/archive_off_screen">
        <Constraint
            android:id="@+id/post_holder"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="200dp"
            android:alpha="0.1"
            android:scaleX="0.5"
            android:scaleY="0.5"
            android:translationZ="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="1">
            <CustomAttribute
                app:attributeName="cardBackgroundColor"
                app:customColorValue="#A8FF00FB" />
        </Constraint>
        <Constraint
            android:id="@+id/archive_button"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:elevation="5dp"
            android:rotation="360"
            android:scaleX="1.5"
            android:scaleY="1.5"
            app:layout_constraintBottom_toBottomOf="@id/post_holder"
            app:layout_constraintStart_toEndOf="@id/post_holder"
            app:layout_constraintTop_toTopOf="@id/post_holder" />
    </ConstraintSet>
    <Transition
        app:constraintSetEnd="@+id/archive_off_screen"
        app:constraintSetStart="@+id/archive_button_visible">
        <OnSwipe
            app:dragDirection="dragLeft"
            app:touchAnchorId="@+id/post_holder"
            app:touchAnchorSide="right" />
    </Transition>
    <ConstraintSet android:id="@+id/top_card_fill_screen" >
        <Constraint
            android:id="@id/post_holder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:alpha="1"
            android:scaleX="1"
            android:scaleY="1"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <CustomAttribute
                app:attributeName="cardBackgroundColor"
                app:customColorValue="@color/secondaryLightColor" />
        </Constraint>
    </ConstraintSet>
    <Transition
        app:constraintSetStart="@+id/top_card_expanded"
        app:constraintSetEnd="@+id/top_card_fill_screen" >
        <OnSwipe
            app:touchAnchorId="@+id/post_holder"
            app:dragDirection="dragDown"
            app:touchAnchorSide="bottom" />
        <KeyFrameSet>
            <KeyPosition
                app:framePosition="50"
                app:keyPositionType="deltaRelative"
                app:motionTarget="@+id/delete_button"
                app:percentX="0.5"
                app:percentY="0.5"
                app:transitionEasing="accelerate" />
            <KeyAttribute
                android:scaleX="0.5"
                android:scaleY="0.5"
                app:framePosition="50"
                app:motionTarget="@+id/delete_button" />
        </KeyFrameSet>
    </Transition>

</MotionScene>

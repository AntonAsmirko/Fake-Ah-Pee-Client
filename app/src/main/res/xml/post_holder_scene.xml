<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/post_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:translationX="0dp" />
        <Constraint
            android:id="@+id/right_card"
            android:translationX="0dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:elevation="5dp"
            app:cardCornerRadius="360dp"
            app:layout_constraintBottom_toBottomOf="@id/post_card"
            app:layout_constraintStart_toEndOf="@id/post_card"
            app:layout_constraintTop_toTopOf="@id/post_card"/>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/right_card_visible">
        <Constraint
            android:id="@+id/post_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:translationX="-80dp" />
        <Constraint
            android:id="@+id/right_card"
            android:translationX="-80dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:elevation="5dp"
            app:cardCornerRadius="360dp"
            app:layout_constraintBottom_toBottomOf="@id/post_card"
            app:layout_constraintStart_toEndOf="@id/post_card"
            app:layout_constraintTop_toTopOf="@id/post_card"/>
    </ConstraintSet>

    <Transition
        app:constraintSetEnd="@+id/right_card_visible"
        app:constraintSetStart="@+id/start"
        app:duration="3000"
        app:autoTransition="animateToStart">
        <OnSwipe
            app:dragDirection="dragLeft"
            app:touchAnchorId="@id/post_card"
            app:touchRegionId="@id/post_card"
            app:touchAnchorSide="middle"/>
    </Transition>
</MotionScene>
